pipeline {
    agent any

    environment {
        // Define the Maven installation name
        MAVEN_HOME = tool name: 'maven3.9.4', type: 'maven'
    }

    stages {
        stage('Build') {
            steps {
                // Run Maven clean install using the specified Maven version
                sh "${MAVEN_HOME}/bin/mvn clean install"
            }
        }
        stage('Sonarqube analysis'){
            steps{
                sh "${MAVEN_HOME}/bin/mvn clean verify sonar:sonar \
                    -Dsonar.projectKey=calculator \
                    -Dsonar.host.url=http://3.27.200.121:9000 \
                    -Dsonar.login=sqp_2f80637f4b0b304327a04fa31b91f3b1ee91874c"
            }
        }
        stage('Quality gate check'){
            steps{
                script{
                    def qualityGateStatus=sh(script: "curl -s -u sqp_2f80637f4b0b304327a04fa31b91f3b1ee91874c: http://3.27.200.121:9000/api/qualitygates/project_status?projectKey=calculator | jq -r '.projectStatus.status'", returnStdout: true).trim()
                    if (qualityGateStatus != 'OK') {
                        error "Quality Gate check failed: ${qualityGateStatus}"
                    } 
                    else {
                        echo "Quality Gate check passed: ${qualityGateStatus}"
                    }
                }
            }
        }
        stage('Jfrog Artifactory upload'){
            steps{
                rtUpload (
                    serverId: "jfrog-instance-1",
                    spec:
                        """{
                        "files": [
                            {
                            "pattern": "*.jar",
                            "target": calculator/"
                            },
                        ]
                        }"""
                )
            }
        }
        

    }
}